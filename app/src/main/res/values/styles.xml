<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="redSeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/buttonColor</item>
        <item name="android:progressTint">@color/red</item>
        <item name="android:thumbTint">@color/red</item>
        <item name="android:thumb">@drawable/thumb</item>
    </style>

    <style name="greenSeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/buttonColor</item>
        <item name="android:progressTint">@color/green</item>
        <item name="android:thumbTint">@color/green</item>
        <item name="android:thumb">@drawable/thumb</item>
    </style>

    <style name="blueSeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/buttonColor</item>
        <item name="android:progressTint">@color/blue</item>
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:thumb">@drawable/thumb</item>

    </style>

</resources>
